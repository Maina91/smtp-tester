# Application Environment
NODE_ENV=development

# API Configuration
VITE_API_URL=http://localhost:3000
VITE_API_PREFIX=/api

# Application Settings
VITE_APP_NAME="SMTP Tester"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="A simple SMTP server testing tool"

# Feature Flags (set to 'true' or 'false')
# VITE_FEATURE_ANALYTICS=false
# VITE_FEATURE_MAINTENANCE_MODE=false

# Optional: Google Analytics (if you add analytics)
# VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Optional: Sentry (if you add error tracking)
# VITE_SENTRY_DSN=your-sentry-dsn
# VITE_SENTRY_ENVIRONMENT=development

# Optional: Authentication (if you add auth)
# VITE_AUTH_ENABLED=false
# VITE_AUTH0_DOMAIN=your-auth0-domain
# VITE_AUTH0_CLIENT_ID=your-auth0-client-id
# VITE_AUTH0_AUDIENCE=your-auth0-audience

# Optional: API Timeout (in milliseconds)
# VITE_API_TIMEOUT=30000

# Optional: Default SMTP Settings (pre-fill the form)
# VITE_DEFAULT_SMTP_HOST=smtp.example.com
# VITE_DEFAULT_SMTP_PORT=587
# VITE_DEFAULT_SMTP_SECURE=false
# VITE_DEFAULT_FROM_EMAIL=test@example.com
